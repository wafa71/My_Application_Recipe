<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pinkbaby"
    android:name="androidx.navigation.fragment.NavHostFragment"
    tools:context=".FirstFragment">
<androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:id="@+id/cardfirst"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white">
    <LinearLayout
    android:background="@color/white"
        android:padding="20dp"

        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="cursive"
            android:lineSpacingExtra="34sp"
            android:gravity="center"
            android:padding="8dp"
            android:singleLine="true"
            android:text="Add Recipe"
            android:textAllCaps="false"
            android:textColor="@color/pinkdark"
            android:textSize="40sp"
            android:textStyle="bold"
            android:typeface="normal" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:id="@+id/image_addfood"
        android:src="@drawable/image_not_available"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_layout"
        android:hint="Recipe name"
        android:layout_marginTop="20dp"
        android:textSize="19sp"
        android:id="@+id/text_name"
        />


    <EditText

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/line_layout"
        android:gravity="top"
        android:hint="Description"
        android:layout_marginTop="20dp"
        android:textSize="19sp"
        android:id="@+id/text_description"
        android:inputType="textMultiLine"
        android:overScrollMode="always"
        android:padding="15dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical" />

<!--    <Button-->
<!--    android:layout_width="match_parent"-->
<!--    android:layout_height="60dp"-->
<!--    android:text="Take photo"-->
<!--    android:textSize="22sp"-->
<!--android:id="@+id/tackephoto"-->
<!--    android:backgroundTint="@color/pinkdark"-->
<!--    android:textColor="#ffffff"-->
<!--    />-->
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Select Image"
        android:textSize="22sp"
        android:backgroundTint="@color/pinkbaby"
        android:textColor="#ffffff"
        android:id="@+id/select_image"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="add Recipe"
        android:textSize="22sp"
        android:backgroundTint="@color/pinkbaby"
        android:textColor="#ffffff"
        android:id="@+id/btnsave"
    />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Cancel"
        android:textSize="22sp"
        android:backgroundTint="@color/pinkbaby"
        android:textColor="#ffffff"
        android:id="@+id/cancelbtn"
        />

</LinearLayout>
</androidx.cardview.widget.CardView>
</ScrollView>